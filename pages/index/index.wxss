/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid cyan;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%; 
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
 ::-webkit-scrollbar{
   width: 0;
   height: 0;
   color: transparent;
 }
.flex-wrap{
  margin: 100rpx auto;
  width: 400rpx;
  height: 400rpx;
  white-space: nowrap;
  display: flex;
  /* border: 1px solid red; */
}
.flex-wrap view{
  width: 400rpx;
  height: 400rpx;
  display: inline-block;
  color: #ffffff;
}
.a{
  background-color: cyan;
}
.b{
  background-color: red;
}
.c{
  background-color: blue;
}
.btn-area {
  text-align: center;
}

.wrap{
  display: flex;
  justify-content: center; 
}
.toEat{
  /* border: 1px solid cyan; */
  padding: 10rpx;
  text-align: center;
  margin-top: 300rpx;
}
.toEat .text-toEat{
  margin-bottom: 30rpx;
}
.text-meal{
  font-size: 80rpx;
  margin-bottom: 30rpx;
  color: rgb(135, 26, 224);
}
.randomMeal{
  display: none;
}
.btn-toEat{
  width: 400rpx;
  padding: 20rpx;
  border-radius: 50%;
  background-color: #000;
  color: #ffffff;
}